# Salesforce Credentials
SF_USERNAME=your_username@example.com
SF_PASSWORD=your_password
SF_SECURITY_TOKEN=your_security_token
SF_DOMAIN=login
SF_API_VERSION=59.0

# AWS Configuration
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET=salesforce-analytics-data
LAMBDA_FUNCTION=sf-data-processor

# Azure Configuration
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
AZURE_CONTAINER=salesforce-data
AZURE_FUNCTION_APP=sf-analytics-func

# Dashboard
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=5000
DASHBOARD_DEBUG=true

# Mock Data Mode (set to false when using real Salesforce)
USE_MOCK_DATA=true
